<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="16dp"
    android:clipToPadding="false"
    android:elevation="8dp">

    <!-- Close Icon -->
    <ImageView
        android:id="@+id/closeDialog"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_close_24"
        android:layout_gravity="end"
        android:contentDescription="Close Dialog"
        android:padding="4dp"
        app:tint="@color/black" />

    <!-- Ride Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <!-- Driver Name and Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialogDriverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/dialogDriverRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.8 â˜…"
                android:textSize="16sp"
                android:textColor="@color/gold" />
        </LinearLayout>

        <!-- Price -->
        <TextView
            android:id="@+id/dialogRidePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$15.00"
            android:textSize="16sp"
            android:textColor="@color/green"
            android:layout_marginTop="4dp"
            android:layout_gravity="end"
            android:textStyle="bold" />

        <!-- Starting Location -->
        <TextView
            android:id="@+id/dialogStartLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From: Main Street"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginTop="8dp" />

        <!-- Destination -->
        <TextView
            android:id="@+id/dialogDestinationLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To: Central Park"
            android:textSize="14sp"
            android:textColor="@color/gray" />

        <!-- Date and Time -->
        <TextView
            android:id="@+id/dialogRideDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dec 5, 2024 at 10:00 AM"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- RequestRide Button -->
    <Button
        android:id="@+id/requestRideButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request Ride"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/primaryColor"
        android:paddingVertical="12dp"
        android:elevation="2dp" />
</LinearLayout>
